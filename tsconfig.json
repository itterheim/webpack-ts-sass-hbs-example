{
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "outDir": "./dist/",
        "target": "es5",
        "sourceMap": true,
        "allowJs": true,
        "lib": [
            "ESNext",
            "dom"
        ],
        "typeRoots": [
            "node_modules/@types"
        ],
        "esModuleInterop": true,
        "downlevelIteration": true,
        "resolveJsonModule": true
    },
    "include": [
        "src/**/*.ts",
        "node_modules/@types"
    ],
    "exclude": [
        ".git",
        "node_modules"
    ]
}
